<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/match_fragment_shape"
    tools:context="com.mrsgx.campustalk.mvp.main.MatchFragment">

    <!-- TODO: Update blank fragmpeople_list_layoutyout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/net_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/follow_bar"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_10"
            android:paddingStart="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            tools:ignore="RtlSymmetry">

            <TextView
                android:id="@+id/txt_net_state_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="1"
                android:text="@string/tips_network_state"
                android:textColor="@android:color/white"
                android:textSize="@dimen/middle_txt" />

            <View
                android:id="@+id/icon_net_state"
                android:layout_width="@dimen/contentSize"
                android:layout_height="@dimen/contentSize"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_5"
                android:background="@mipmap/wifi_disconnect" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:orientation="vertical"
            android:layout_below="@id/net_state">

            <android.support.v7.widget.AppCompatTextView
                android:paddingTop="@dimen/dp_5"
                android:paddingEnd="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通知公告："
                android:textSize="@dimen/dp_10" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_start_match"
            android:layout_width="@dimen/big_button"
            android:layout_height="@dimen/big_button"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_start_match"
            android:text="@string/txt_start_matching"
            android:textColor="@android:color/white"
            android:textSize="@dimen/middle_txt_2" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvNotify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/net_state"
            android:layout_marginTop="22dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingBottom="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="今晚三点有活动哦，大家准备好。。。。哈哈哈哈哈6666666666666666666"
            android:textSize="@dimen/dp_15" />
    </RelativeLayout>

</FrameLayout>
